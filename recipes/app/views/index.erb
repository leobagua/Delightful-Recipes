<div class="columns">
  <div class="column">
    <% @recipes.each_slice(2) do |group| %>
      <div class="columns">
        <% group.each do |recipe| %>
          <div class="column is-half">
            <div class="card">
              <div class="card-image">
                <figure class="image is-3by2">
                  <a href="/<%= recipe.id %>">
                    <img src="<%= recipe.image_url %>" alt="Placeholder image">
                  </a>
                </figure>
              </div>
              <div class="card-content">
                <div class="media">
                  <div class="media-content">
                    <a class="title is-5 recipe-title" href="/<%= recipe.id %>"><%= recipe.title %></a>
                    <p class="subtitle is-6 mt-2">By Chef <%= recipe.chef %></p>
                  </div>
                </div>
                <div class="content">
                  <div class="tags mt-4">
                    <% recipe.tags.each do |tag| %>
                      <span class="tag is-warning is-uppercase"><%= tag %></span>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>